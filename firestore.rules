rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
    
    function isTutor() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'TUTOR'];
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Check if user is guardian of the specified student
    function isGuardianOf(studentId) {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.linkedStudents.hasAny([studentId]);
    }
    
    // Check if user can access student data (owner, guardian, or tutor/admin)
    function canAccessStudentData(studentId) {
      return isOwner(studentId) || isGuardianOf(studentId) || isTutor();
    }
    
    // Users collection
    match /users/{userId} {
      // Admins can read/write all users
      // Users can read their own profile
      allow read: if isOwner(userId) || isAdmin();
      // Users can create their own profile (initial setup)
      // Admins can create any user
      allow create: if isOwner(userId) || isAdmin();
      // Users can update own profile (but not role), Admins can update all
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Schools collection - student-specific data
    match /schools/{schoolId} {
      // Read: owner, their guardian, or tutors/admin
      allow read: if isSignedIn() && 
        (resource.data.studentId == request.auth.uid || 
         isTutor() ||
         (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('linkedStudents', []).hasAny([resource.data.studentId])));
      allow create, update: if isTutor();
      allow delete: if isAdmin();
    }
    
    // Lessons collection
    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow create, update: if isTutor();
      allow delete: if isAdmin();
    }
    
    // Questions collection - student-specific data
    match /questions/{questionId} {
      // Read: student owner, their guardian, or tutors/admin
      allow read: if isSignedIn() && 
        (resource.data.studentId == request.auth.uid || 
         isTutor() ||
         (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('linkedStudents', []).hasAny([resource.data.studentId])));
      // Create: any signed-in user (students create their own questions)
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      allow update: if isTutor();
      allow delete: if isAdmin();
    }
    
    // Audit logs - write-only for users, read for admins
    match /audit_logs/{logId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow update, delete: if false; // Immutable
    }
    
    // Rate limits - Cloud Functions only
    match /rate_limits/{limitId} {
      allow read, write: if false; // Cloud Functions use admin SDK
    }
    
    // API usage logs - Cloud Functions only
    match /api_usage_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Cloud Functions use admin SDK
    }
    
    // System config - Signed in users can read, write for initial setup
    match /system_config/{configId} {
      allow read: if isSignedIn();
      // Allow write if doc doesn't exist (initial setup) or if admin
      allow write: if isSignedIn();
    }
    
    // Exam scores
    match /exam_scores/{scoreId} {
      allow read: if isSignedIn();
      allow create, update: if isTutor();
      allow delete: if isAdmin();
    }
  }
}
